<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.egoonet.lighting.assembly_jxepc_server.dao.RoleDao">
    <insert id="addRoles">
        INSERT INTO roles_user VALUES
        <foreach collection="roles" item="role" separator=",">
            (null,#{role},#{uid})
        </foreach>
    </insert>
    <select id="getRolesByUid" parameterType="long" resultType="com.egoonet.lighting.assembly_jxepc_server.entity.Role">
        SELECT r.* FROM roles r,roles_user ru WHERE r.id=ru.rid AND ru.uid=#{uid}
    </select>
</mapper>